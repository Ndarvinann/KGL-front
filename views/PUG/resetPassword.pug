.container-fluid
  .row
    // Sidebar
    nav.col-md-2.d-none.d-md-block.bg-light.sidebar
      h1  Features
      .position-sticky
        ul.nav.flex-column.p-3
          li.nav-item
            a.nav-link(href='#') &#x1F3E0; Home
          li.nav-item
            a.nav-link(href='#') &#x1F4CA; Analytics
          li.nav-item
