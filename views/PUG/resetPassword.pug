          li.nav-item
            a.nav-link.active(href='#') &#x1F512; Reset Password
          li.nav-item
            a.nav-link(href='#') &#x274C;logout 
    // Main Content
    main.col-md-9.ms-sm-auto.col-lg-10.px-md-4.py-4
      .row.justify-content-center
        .col-lg-8
          .password-form
            .form-header
              h2 Reset Your Password
              p Please fill in these details to reset your password
            form
              .row.mb-3
                .col-md-6.mb-3.mb-md-0
                  label.form-label(for='firstName') First Name
                  input#firstName.form-control(type='text' placeholder='Enter your first name' required='')
                .col-md-6
                  label.form-label(for='lastName') Last Name
                  input#lastName.form-control(type='text' placeholder='Enter your last name' required='')
              .mb-3
                label.form-label(for='email') Email Address
                input#email.form-control(type='email' placeholder='Enter your email address' required='')
              .mb-3
                label.form-label(for='role') Role
                select#role.form-select(required='')
                  option(value='' selected='' disabled='') Select your role
                  option(value='salesAgent') Sales Agent
                  option(value='director') Director
                  option(value='manager') Manager
              .mb-3
                label.form-label(for='password') New Password
                input#password.form-control(type='password' placeholder='Enter new password' required='')
                .form-text Must be at least 8 characters long
              .mb-4
                label.form-label(for='confirmPassword') Confirm Password
                input#confirmPassword.form-control(type='password' placeholder='Confirm your new password' required='')
              .d-grid.gap-2
                button.btn.btn-primary.btn-reset(type='submit') Reset Password
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
