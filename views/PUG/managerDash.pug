doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Dashboard - Overview
  link(rel='stylesheet' href='/public/css/kglCss/managerDash.css')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' rel='stylesheet')
.container-fluid
  .row
    // Sidebar
    nav.col-md-2.d-none.d-md-block.bg-light.sidebar
      h1  Features
      .position-sticky
        ul.nav.flex-column.p-3
          li.nav-item
            a.nav-link.active(href='#') &#x1F3E0; Home
          li.nav-item
            a.nav-link(href='#') &#x1F4CA; Analytics
          li.nav-item
            a.nav-link(href='#') &#x1F6D2;Users 
          li.nav-item
            a.nav-link(href='#') &#x1FAD8;Products
          li.nav-item
            a.nav-link(href='#') &#x2728;sales 
          li.nav-item
            a.nav-link(href='#') &#x2699;&#xFE0F; Credit 
          li.nav-item
            a.nav-link(href='#') &#x1F3E6;Payments  
          li.nav-item
            a.nav-link(href='#') &#x2699;&#xFE0F; settings 
          li.nav-item
            a.nav-link(href='#') &#x274C;logout 
    // Main Content
    main.col-md-10.ms-sm-auto.px-md-4.py-4
      // Page Header
      .d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pt-3.pb-2.mb-3.border-bottom
        h1.h2 Dashboard Overview
        .btn-toolbar.mb-2.mb-md-0
          .btn-group.me-2
            button.btn.btn-sm.btn-outline-secondary(type='button') Export
            // to export the dashboard summary
      // Current Stock Levels
      .dashboard-card.card.mb-4
        .card-header.d-flex.justify-content-between.align-items-center
          span &#x1F4E6; Current Stock Levels
          small.text-muted Updated 5 minutes ago
          // needs to be made dynamic for live dashboards
        .table-responsive
          table.table.table-hover.mb-0
            thead
              tr
                th Produce
                th Category
                th Current Stock
                th Status
                th Last Restock
            tbody
              tr
                td Ground-Nuts
                td Nuts and Seeds
                td 100 kgs
                td
                  span.badge.bg-success In Stock
                td 2 days ago
              tr
                td Maize
                td Cereals
                td 25 kgs
                td
                  span.badge.bg-warning Low Stock
                td 1 week ago
              tr
                td Beans
                td Legumes
                td 250kgs
                td
                  span.badge.bg-success In stock
                td 3 days ago
              tr
                td Cow-Peas
                td Legumes
                td 0 kgs
                td
                  span.badge.bg-danger Out of stock
                td Yesterday
              | tr&gt;
              td Soy-Beans
              td Legumes
              td  20kgs
              td
                span.badge.bg-warning Low stock
              td Today
              // updates when a salesAgent inputs a sale
      .row
        // Recent Sales Activity
        .col-md-6
          .dashboard-card.card.h-100
            .card-header
              | &#x1F6CD;&#xFE0F; Recent Sales Activity
            .card-body
              ul.list-group.list-group-flush
                li.list-group-item.d-flex.justify-content-between.align-items-center
                  | Sale #10045 - Beans
                  span.badge.bg-primary.rounded-pill  Ugx 450.000 
                li.list-group-item.d-flex.justify-content-between.align-items-center
                  | Sale #10044 - Maize
                  span.badge.bg-primary.rounded-pill Ugx 100.000
                // Updated whenever a salesAgent inputs a sale...
        // Credit Payments
        .col-md-6
          .dashboard-card.card.h-100
            .card-header
              | &#x1F4B3; Credit Payments
            .card-body
              .table-responsive
                table.table.table-sm
                  thead
                    tr
                      th Customer
                      th Amount Due
                      th Due Date
                      th Status
                  tbody
                    tr
                      td Ms Kawooya
                      td Ugx 100.000 
                      td May 15
                      td
                        span.badge.bg-warning.text-dark Pending
                    tr
                      td Mrs. Jamada
                      td Ugx 100.000 
                      td Feb 19th 
                      td
                        span.badge.bg-danger.text-light Overdue!!
                    tr
                      td Darvin
                      td Ugx 150.000 
                      td May 15
                      td
                        span.badge.bg-success.text-light Paid
                    // Updates when a sales agent updates the credit form...
      // Sales Trends (Last 30 Days)
      .dashboard-card.card.mt-4
        .card-header.d-flex.justify-content-between.align-items-center
          span &#x1F4C8; Sales Trends (Last 30 Days)
          .btn-group
            button.btn.btn-sm.btn-outline-secondary Daily
            button.btn.btn-sm.btn-outline-secondary.active Weekly
            button.btn.btn-sm.btn-outline-secondary Monthly
            // should toggle between these buttons
        .card-body
          .chart-container
            // Placeholder for chart (would be replaced with actual chart library)
            div(style='background-color: #f8f9fa; height: 100%; display: flex; align-items: center; justify-content: center; border-radius: 4px;')
              | [Chart should display here]
      // Report Generation
      .dashboard-card.card.mt-4
        .card-header
          | &#x1F4C4; Generate Reports
        .card-body
          .row
            .col-md-6
              h5 Sales Reports
              .mb-3
                .row
                  .col-md-6
                    label.form-label Start Date
                    input.form-control(type='date')
                  .col-md-6
                    label.form-label End Date
                    input.form-control(type='date')
              button.btn.btn-primary Generate Sales Report
            .col-md-6
              h5 Credit Reports
              .mb-3
                select.form-select
                  option All Credits
                  option Pending Only
                  option Paid Only
                  option(value='Over due') Overdue Only
              button.btn.btn-primary Generate Credit Report
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')