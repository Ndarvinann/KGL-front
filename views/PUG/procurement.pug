doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Karibu Groceries - Procurement
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css')
  link(rel='stylesheet' href='/css/kglCss/procurement.css')
.container-fluid
  .row
    // Your Original Sidebar
    nav.col-md-3.col-lg-2.d-md-block.sidebar
      .position-sticky.pt-3
        h1.p-3 Features
        ul.nav.flex-column.p-3
          li.nav-item
            a.nav-link(href='#') &#x1F3E0; Home
          li.nav-item
            a.nav-link(href='#') &#x1F4CA; Analytics
          li.nav-item
            a.nav-link(href='#') &#x1F6D2; Users
          li.nav-item
            a.nav-link(href='#') &#x1FAD8; Products
          li.nav-item
            a.nav-link(href='#') &#x2728; Sales
          li.nav-item
            a.nav-link(href='#') &#x2699;&#xFE0F; Credit
          li.nav-item
            a.nav-link(href='#') &#x1F3E6; Payments
          li.nav-item
            a.nav-link(href='#') &#x2699;&#xFE0F; Settings
          li.nav-item
            a.nav-link(href='#') &#x274C; Logout
    // Main Content
    main.col-md-9.col-lg-10.main-content
      .procurement-card
        h4.mb-4
          i.fas.fa-shopping-basket.me-2
          | Produce Procurement
        form#procurementForm
          .row.g-3
            // Left Column
            .col-md-6
              .mb-3
                label.form-label(for='produceName') Produce Name
                select#produceName.form-select(required='')
                  option(selected='' disabled='' value='') Select produce...
                  option Gnuts
                  option Maize
                  option Beans
                  option Cow-peas
                  option Soy-beans
              .mb-3
                label.form-label(for='tonnage') Quantity (in kgs)
                .input-group
                  input#tonnage.form-control(type='number' min='1' step='0.5' required='')
                  span.input-group-text kg
              .mb-3
                label.form-label(for='dealerName') Dealer&apos;s Name
                input#dealerName.form-control(type='text' required='')
              .mb-3
                label.form-label(for='branchName') Branch Name
                select#branchName.form-select(required='')
                  option(selected='' disabled='' value='') Select Branch
                  option Maganjo
                  option Matuga
            // Right Column
            .col-md-6
              .mb-3
                label.form-label(for='dateTime') Date &amp; Time
                input#dateTime.form-control(type='datetime-local' required='')
              .mb-3
                label.form-label(for='cost') Cost (in UgX)
                .input-group
                  span.input-group-text UgX
                  input#cost.form-control(type='number' min='1' required='')
              .mb-3
                label.form-label(for='contact') Contact
                .input-group
                  span.input-group-text +256
                  input#contact.form-control(type='tel' required='')
              .mb-3
                label.form-label(for='priceToSell') Selling Price
                .input-group
                  span.input-group-text UgX
                  input#priceToSell.form-control(type='number' required='')
                  button#calculateMarkup.btn.btn-outline-success(type='button')
                    i.fas.fa-calculator
                    |  Auto-calculate
              p.text.text-muted 30% Markup Recommended 
            // Full Width Submit
            .col-12.mt-3
              button.btn.btn-submit.me-2(type='submit')
                i.fas.fa-save.me-1
                | Submit Record
              button.btn.btn-outline-secondary(type='reset')
                i.fas.fa-undo.me-1
                | Reset Form
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
script(src='/filejs/procurement.js')
